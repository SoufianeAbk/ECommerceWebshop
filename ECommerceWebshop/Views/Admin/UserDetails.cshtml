@model ECommerceWebshop.Models.ApplicationUser
@{
    ViewData["Title"] = "Gebruiker Details";
    var roles = ViewData["Roles"] as string ?? "";
    var orders = ViewData["Orders"] as List<ECommerceWebshop.Models.Order> ?? new List<ECommerceWebshop.Models.Order>();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Users">Gebruikers</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.FirstName @Model.LastName</li>
    </ol>
</nav>

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1><i class="bi bi-person-circle"></i> Gebruiker Details</h1>
            <a asp-action="Users" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Terug naar Gebruikers
            </a>
        </div>
    </div>
</div>

<!-- User Information Card -->
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-person"></i> Persoonlijke Informatie</h4>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-person-circle display-1 text-primary"></i>
                    <h3 class="mt-2">@Model.FirstName @Model.LastName</h3>
                    @if (roles.Contains("Admin"))
                    {
                        <span class="badge bg-danger">Administrator</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">Gebruiker</span>
                    }
                </div>

                <hr>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="bi bi-envelope"></i> E-mail</label>
                    <input type="text" class="form-control" value="@Model.Email" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="bi bi-telephone"></i> Telefoon</label>
                    <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Niet ingevuld" : Model.PhoneNumber)" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="bi bi-house"></i> Adres</label>
                    <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.Address) ? "Niet ingevuld" : Model.Address)" readonly />
                </div>

                <div class="row">
                    <div class="col-8 mb-3">
                        <label class="form-label fw-bold"><i class="bi bi-geo-alt"></i> Stad</label>
                        <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.City) ? "Niet ingevuld" : Model.City)" readonly />
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label fw-bold">Postcode</label>
                        <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.PostalCode) ? "-" : Model.PostalCode)" readonly />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="bi bi-calendar"></i> Registratiedatum</label>
                    <input type="text" class="form-control" value="@Model.RegistrationDate.ToString("dd MMMM yyyy")" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold"><i class="bi bi-shield-check"></i> Rol</label>
                    <input type="text" class="form-control" value="@roles" readonly />
                </div>
            </div>
        </div>
    </div>

    <!-- Orders History -->
    <div class="col-md-8 mb-4">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-cart-check"></i> Bestelgeschiedenis (@orders.Count)</h4>
            </div>
            <div class="card-body">
                @if (orders.Any())
                {
                    <!-- Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Totaal Bestellingen</h6>
                                    <h3 class="text-primary">@orders.Count</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Totaal Besteed</h6>
                                    <h3 class="text-success">€ @orders.Sum(o => o.TotalAmount).ToString("N2")</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Gem. Bestelwaarde</h6>
                                    <h3 class="text-info">€ @((orders.Sum(o => o.TotalAmount) / orders.Count).ToString("N2"))</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Orders Table -->
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Bestelnummer</th>
                                    <th>Datum</th>
                                    <th>Items</th>
                                    <th>Totaal</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in orders)
                                {
                                    <tr>
                                        <td><strong>@order.OrderNumber</strong></td>
                                        <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                                        <td>@order.OrderItems.Count items</td>
                                        <td class="text-success fw-bold">€ @order.TotalAmount.ToString("F2")</td>
                                        <td>
                                            @if (order.Status == "Processing")
                                            {
                                                <span class="badge bg-info">@order.Status</span>
                                            }
                                            else if (order.Status == "Shipped")
                                            {
                                                <span class="badge bg-primary">@order.Status</span>
                                            }
                                            else if (order.Status == "Delivered")
                                            {
                                                <span class="badge bg-success">@order.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@order.Status</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Cart" asp-action="OrderConfirmation" asp-route-id="@order.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Order Items Details -->
                    <div class="mt-4">
                        <h5>Meest Gekochte Producten</h5>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Aantal Keer Gekocht</th>
                                        <th>Totaal Aantal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var productStats = orders
                                        .SelectMany(o => o.OrderItems)
                                        .GroupBy(oi => oi.ProductName)
                                        .Select(g => new
                                        {
                                            ProductName = g.Key,
                                            OrderCount = g.Count(),
                                            TotalQuantity = g.Sum(oi => oi.Quantity)
                                        })
                                        .OrderByDescending(x => x.TotalQuantity)
                                        .Take(5);
                                    }
                                    @foreach (var stat in productStats)
                                    {
                                        <tr>
                                            <td>@stat.ProductName</td>
                                            <td>@stat.OrderCount x</td>
                                            <td>@stat.TotalQuantity stuks</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-cart-x display-1 text-muted"></i>
                        <p class="text-muted mt-3">Deze gebruiker heeft nog geen bestellingen geplaatst</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .form-control {
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    .table td {
        vertical-align: middle;
    }
</style>