@{
    ViewData["Title"] = "Home";
    var featuredProducts = ViewData["FeaturedProducts"] as IEnumerable<ECommerceWebshop.Models.Product>;
    var categories = ViewData["Categories"] as IEnumerable<ECommerceWebshop.Models.Category>;
}

<!-- Hero Section -->
<div class="hero-section mb-5">
    <div class="jumbotron text-center bg-gradient p-5 rounded-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <h1 class="display-4 fw-bold mb-3">Welkom bij ECommerceWebshop</h1>
        <p class="lead fs-4 mb-4">Ontdek onze uitgebreide collectie kwaliteitsproducten</p>
        <div class="row justify-content-center">
            <div class="col-md-3 mb-2">
                <div class="feature-box">
                    <i class="bi bi-truck display-6"></i>
                    <p>Gratis verzending vanaf €50</p>
                </div>
            </div>
            <div class="col-md-3 mb-2">
                <div class="feature-box">
                    <i class="bi bi-shield-check display-6"></i>
                    <p>Veilig betalen</p>
                </div>
            </div>
            <div class="col-md-3 mb-2">
                <div class="feature-box">
                    <i class="bi bi-arrow-clockwise display-6"></i>
                    <p>30 dagen retourgarantie</p>
                </div>
            </div>
            <div class="col-md-3 mb-2">
                <div class="feature-box">
                    <i class="bi bi-headset display-6"></i>
                    <p>24/7 Klantenservice</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Categories Section -->
<div class="categories-section mb-5">
    <div class="section-header text-center mb-4">
        <h2 class="display-5 fw-bold gradient-text">Shop per Categorie</h2>
        <p class="text-muted">Vind precies wat u zoekt in onze categorieën</p>
    </div>
    <div class="row">
        @if (categories != null)
        {
            @foreach (var category in categories)
            {
                <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
                    <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id"
                       class="text-decoration-none">
                        <div class="category-card shadow-sm">
                            <div class="card-body text-center p-4">
                                <div class="category-icon mb-3" style="font-size: 3rem;">@category.Icon</div>
                                <h5 class="card-title">@category.Name</h5>
                                <small class="text-muted">@category.Description</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>

<!-- Featured Products -->
<div class="featured-products-section mb-5">
    <div class="section-header text-center mb-4">
        <h2 class="display-5 fw-bold gradient-text">Uitgelichte Producten</h2>
        <p class="text-muted">Onze meest populaire items van dit moment</p>
    </div>
    <div class="row">
        @if (featuredProducts != null)
        {
            @foreach (var product in featuredProducts.Take(8))
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 fade-in-up">
                    <div class="card h-100 product-card">
                        <div class="card-img-wrapper position-relative">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            @if (product.Stock <= 5 && product.Stock > 0)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-warning m-2">
                                    Bijna uitverkocht!
                                </span>
                            }
                            @if (product.Stock == 0)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                                    Uitverkocht
                                </span>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <span class="badge bg-light text-dark">@product.Category?.Name</span>
                            </div>
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small flex-grow-1">@product.Description</p>
                            <div class="mt-auto">
                                <div class="price-section mb-3">
                                    <span class="h4 text-primary fw-bold">€ @product.Price.ToString("F2")</span>
                                    @if (product.Stock > 0)
                                    {
                                        <span class="badge bg-success float-end">Op voorraad</span>
                                    }
                                </div>
                                <div class="button-group">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                                       class="btn btn-outline-primary btn-sm w-100 mb-2">
                                        <i class="bi bi-eye"></i> Bekijk Details
                                    </a>
                                    @if (product.Stock > 0)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline w-100">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> In Winkelwagen
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="text-center mt-4">
        <a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-primary">
            <i class="bi bi-grid-3x3-gap"></i> Bekijk Alle Producten
        </a>
    </div>
</div>

<!-- Promotional Banner -->
<div class="promo-section mb-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="promo-content p-5">
                <h3 class="display-6 fw-bold mb-3">Speciale Aanbieding</h3>
                <p class="lead mb-4">Krijg tot 50% korting op geselecteerde items!</p>
                <a href="#" class="btn btn-warning btn-lg">
                    <i class="bi bi-tag"></i> Shop Nu
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="promo-image text-center">
                <img src="https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?w=500&h=300&fit=crop"
                     alt="Sale" class="img-fluid rounded-3 shadow">
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section .feature-box {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 10px;
        backdrop-filter: blur(10px);
    }

    .category-card {
        transition: all 0.3s ease;
        border: none;
    }

    .category-card:hover {
        transform: translateY(-5px);
    }

    .product-card {
        transition: all 0.3s ease;
        border: none;
    }

    .product-card:hover {
        transform: translateY(-10px);
    }

    .card-img-wrapper {
        overflow: hidden;
        height: 200px;
    }

    .promo-content {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border-radius: 15px;
    }

    .section-header {
        margin-bottom: 3rem;
    }

    .gradient-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>