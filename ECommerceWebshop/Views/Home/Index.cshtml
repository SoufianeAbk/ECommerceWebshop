@{
    ViewData["Title"] = "Home";
    var featuredProducts = ViewData["FeaturedProducts"] as IEnumerable<ECommerceWebshop.Models.Product>;
    var categories = ViewData["Categories"] as IEnumerable<ECommerceWebshop.Models.Category>;
}

<div class="text-center mb-5">
    <h1 class="display-4">Welkom bij onze Webshop</h1>
    <p class="lead">Ontdek onze uitgebreide collectie producten</p>
</div>

<!-- Categories Section -->
<div class="row mb-5">
    <div class="col-12">
        <h2 class="mb-4">Shop per Categorie</h2>
        <div class="row">
            @if (categories != null)
            {
                @foreach (var category in categories)
                {
                    <div class="col-md-2 col-sm-4 col-6 mb-3">
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id"
                           class="text-decoration-none">
                            <div class="card text-center h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="display-4 mb-2">@category.Icon</div>
                                    <h6 class="card-title">@category.Name</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Featured Products -->
<div class="row mb-5">
    <div class="col-12">
        <h2 class="mb-4">Uitgelichte Producten</h2>
        <div class="row">
            @if (featuredProducts != null)
            {
                @foreach (var product in featuredProducts)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="text-muted small">@product.Category?.Name</p>
                                <p class="card-text flex-grow-1">@product.Description</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 mb-0 text-primary">€ @product.Price.ToString("F2")</span>
                                        @if (product.Stock > 0)
                                        {
                                            <span class="badge bg-success">Op voorraad</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Uitverkocht</span>
                                        }
                                    </div>
                                    <div class="mt-3">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                                           class="btn btn-outline-primary btn-sm">Bekijk Details</a>
                                        @if (product.Stock > 0)
                                        {
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-cart-plus"></i> In Winkelwagen
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div class="text-center mb-4">
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
        Bekijk Alle Producten
    </a>
</div>