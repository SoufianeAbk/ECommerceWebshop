@model IEnumerable<ECommerceWebshop.Models.Product>
@{
    ViewData["Title"] = "Producten";
    var categories = ViewData["Categories"] as IEnumerable<ECommerceWebshop.Models.Category>;
    var currentCategory = ViewData["CurrentCategory"] as int?;
    var categoryName = ViewData["CategoryName"] as string;
}

<h1>@(string.IsNullOrEmpty(categoryName) ? "Alle Producten" : categoryName)</h1>

<div class="row mb-4">
    <div class="col-md-3">
        <!-- Filters -->
        <div class="card">
            <div class="card-header">
                <h5>Filters</h5>
            </div>
            <div class="card-body">
                <!-- Search -->
                <form asp-action="Index" method="get" class="mb-3">
                    <div class="input-group">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                               class="form-control" placeholder="Zoeken..." />
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
                
                <!-- Categories -->
                <h6>Categorieën</h6>
                <div class="list-group">
                    <a asp-action="Index" class="list-group-item list-group-item-action @(currentCategory == null ? "active" : "")">
                        Alle Categorieën
                    </a>
                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            <a asp-action="Index" asp-route-categoryId="@category.Id" 
                               class="list-group-item list-group-item-action @(currentCategory == category.Id ? "active" : "")">
                                @category.Icon @category.Name
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="text-muted small">@product.Category?.Name</p>
                            <p class="card-text flex-grow-1">
                                @(product.Description.Length > 100 ? 
                                  product.Description.Substring(0, 100) + "..." : 
                                  product.Description)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="h5 mb-0 text-primary">€ @product.Price.ToString("F2")</span>
                                    @if (product.Stock > 0)
                                    {
                                        <span class="badge bg-success">Op voorraad</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Uitverkocht</span>
                                    }
                                </div>
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@product.Id" 
                                       class="btn btn-outline-primary btn-sm">Details</a>
                                    @if (product.Stock > 0)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline flex-fill">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> Toevoegen
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>