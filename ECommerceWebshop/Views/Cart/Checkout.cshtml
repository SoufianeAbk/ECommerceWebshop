@model ECommerceWebshop.Models.Order
@{
    ViewData["Title"] = "Afrekenen";
    var cartItems = ViewData["CartItems"] as List<ECommerceWebshop.Models.CartItem>;
    decimal total = (decimal)(ViewData["CartTotal"] ?? 0m);
}

<h1>Afrekenen</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Verzendgegevens</h4>
            </div>
            <div class="card-body">
                <form asp-action="Checkout" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">Voornaam</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Achternaam</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">E-mail</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">Telefoon</label>
                            <input asp-for="Phone" class="form-control" type="tel" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Adres</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="City" class="form-label">Stad</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="PostalCode" class="form-label">Postcode</label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5>Betalingsmethode</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="ideal" value="ideal" checked>
                                <label class="form-check-label" for="ideal">
                                    iDEAL
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="creditcard" value="creditcard">
                                <label class="form-check-label" for="creditcard">
                                    Credit Card
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" value="paypal">
                                <label class="form-check-label" for="paypal">
                                    PayPal
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-success btn-lg mt-4 w-100">
                        <i class="bi bi-check-circle"></i> Bestelling Plaatsen
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Overzicht Bestelling</h4>
            </div>
            <div class="card-body">
                @if (cartItems != null)
                {
                    @foreach (var item in cartItems)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.ProductName (x@item.Quantity)</span>
                            <span>€ @item.Total.ToString("F2")</span>
                        </div>
                    }
                }
                <hr>
                <div class="d-flex justify-content-between">
                    <strong>Subtotaal:</strong>
                    <strong>€ @total.ToString("F2")</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Verzendkosten:</span>
                    <span>€ 0,00</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <h5>Totaal:</h5>
                    <h5 class="text-primary">€ @total.ToString("F2")</h5>
                </div>
            </div>
        </div>
        
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">
                <i class="bi bi-arrow-left"></i> Terug naar Winkelwagen
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}