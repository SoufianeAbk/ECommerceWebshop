@model ECommerceWebshop.Models.Order
@{
    ViewData["Title"] = "Bestelling Bevestigd";
}

<div class="text-center mb-5">
    <i class="bi bi-check-circle text-success" style="font-size: 5rem;"></i>
    <h1 class="mt-3">Bedankt voor uw bestelling!</h1>
    <p class="lead">Uw bestelling is succesvol geplaatst en wordt zo snel mogelijk verwerkt.</p>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4>Bestelgegevens</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Bestelnummer:</strong><br>
                        @Model.OrderNumber
                    </div>
                    <div class="col-md-6">
                        <strong>Datum:</strong><br>
                        @Model.OrderDate.ToString("dd-MM-yyyy HH:mm")
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Status:</strong><br>
                        <span class="badge bg-info">@Model.Status</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Totaal Bedrag:</strong><br>
                        <span class="h5 text-primary">€ @Model.TotalAmount.ToString("F2")</span>
                    </div>
                </div>
                
                <hr>
                
                <h5>Verzendadres</h5>
                <p>
                    @Model.FirstName @Model.LastName<br>
                    @Model.Address<br>
                    @Model.PostalCode @Model.City<br>
                    <strong>E-mail:</strong> @Model.Email<br>
                    <strong>Telefoon:</strong> @Model.Phone
                </p>
                
                <hr>
                
                <h5>Bestelde Producten</h5>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Prijs</th>
                            <th>Aantal</th>
                            <th>Subtotaal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>€ @item.Price.ToString("F2")</td>
                                <td>@item.Quantity</td>
                                <td>€ @item.Total.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Totaal:</th>
                            <th>€ @Model.TotalAmount.ToString("F2")</th>
                        </tr>
                    </tfoot>
                </table>
                
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i>
                    <strong>Wat gebeurt er nu?</strong><br>
                    <ul class="mb-0">
                        <li>U ontvangt een bevestigingsmail op @Model.Email</li>
                        <li>Wij gaan uw bestelling verwerken</li>
                        <li>U ontvangt een mail zodra uw bestelling is verzonden</li>
                        <li>Verwachte levertijd: 2-3 werkdagen</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house"></i> Terug naar Home
            </a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-shop"></i> Verder Winkelen
            </a>
        </div>
    </div>
</div>