@model ECommerceWebshop.Models.Order
@{
    ViewData["Title"] = "Bestelling Bevestigd";
    var invoiceExists = (bool)(ViewData["InvoiceExists"] ?? false);
}

<div class="text-center mb-5">
    <i class="bi bi-check-circle text-success" style="font-size: 5rem;"></i>
    <h1 class="mt-3">Bedankt voor uw bestelling!</h1>
    <p class="lead">Uw bestelling is succesvol geplaatst en wordt zo snel mogelijk verwerkt.</p>

    @* Succesbericht van factuur generatie *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Prominent Download Button *@
    @if (invoiceExists)
    {
        <div class="mt-4 mb-4">
            <a asp-action="DownloadInvoice" asp-route-orderNumber="@Model.OrderNumber"
               class="btn btn-success btn-lg shadow-lg">
                <i class="bi bi-file-earmark-pdf-fill"></i> Download Factuur (PDF)
            </a>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-receipt"></i> Bestelgegevens</h4>
                @* Secondary download button in header *@
                @if (invoiceExists)
                {
                    <a asp-action="DownloadInvoice" asp-route-orderNumber="@Model.OrderNumber"
                       class="btn btn-light btn-sm">
                        <i class="bi bi-download"></i> Factuur
                    </a>
                }
            </div>
            <div class="card-body">
                @* Invoice notification banner *@
                @if (invoiceExists)
                {
                    <div class="alert alert-success border-success">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-file-earmark-pdf-fill display-4 text-success"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="alert-heading">
                                    <i class="bi bi-check-circle-fill"></i> Factuur Beschikbaar!
                                </h5>
                                <p class="mb-2">
                                    Uw factuur is succesvol gegenereerd en staat klaar om te downloaden.
                                </p>
                                <a asp-action="DownloadInvoice" asp-route-orderNumber="@Model.OrderNumber"
                                   class="btn btn-success btn-sm">
                                    <i class="bi bi-download"></i> Download Factuur Nu
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-hash"></i> Bestelnummer:</strong><br>
                        <span class="text-primary fw-bold">@Model.OrderNumber</span>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-calendar-event"></i> Datum:</strong><br>
                        @Model.OrderDate.ToString("dd-MM-yyyy HH:mm")
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-info-circle"></i> Status:</strong><br>
                        <span class="badge bg-info fs-6">@Model.Status</span>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-currency-euro"></i> Totaal Bedrag:</strong><br>
                        <span class="h5 text-primary">€ @Model.TotalAmount.ToString("F2")</span>
                    </div>
                </div>

                <hr class="my-4">

                <h5><i class="bi bi-geo-alt"></i> Verzendadres</h5>
                <div class="bg-light p-3 rounded mb-4">
                    <p class="mb-1">
                        <strong>@Model.FirstName @Model.LastName</strong>
                    </p>
                    <p class="mb-1">@Model.Address</p>
                    <p class="mb-1">@Model.PostalCode @Model.City</p>
                    <p class="mb-1">
                        <i class="bi bi-envelope"></i> <strong>E-mail:</strong> @Model.Email
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-telephone"></i> <strong>Telefoon:</strong> @Model.Phone
                    </p>
                </div>

                <hr class="my-4">

                <h5><i class="bi bi-bag-check"></i> Bestelde Producten</h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th class="text-end">Prijs</th>
                                <th class="text-center">Aantal</th>
                                <th class="text-end">Subtotaal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-end">€ @item.Price.ToString("F2")</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end fw-bold">€ @item.Total.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">Totaal:</th>
                                <th class="text-end text-primary">€ @Model.TotalAmount.ToString("F2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="alert alert-info mt-4">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle"></i> Wat gebeurt er nu?
                    </h6>
                    <ul class="mb-0">
                        <li>U ontvangt een bevestigingsmail op <strong>@Model.Email</strong></li>
                        <li>Wij gaan uw bestelling verwerken</li>
                        <li>U ontvangt een mail zodra uw bestelling is verzonden</li>
                        <li>Verwachte levertijd: <strong>2-3 werkdagen</strong></li>
                        @if (invoiceExists)
                        {
                            <li class="text-success fw-bold">
                                <i class="bi bi-check-circle"></i>
                                Uw factuur kan worden gedownload via de knop hierboven
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="text-center mt-4 mb-5">
            @if (invoiceExists)
            {
                <a asp-action="DownloadInvoice" asp-route-orderNumber="@Model.OrderNumber"
                   class="btn btn-success btn-lg me-2">
                    <i class="bi bi-file-earmark-pdf"></i> Download Factuur
                </a>
            }
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
                <i class="bi bi-house"></i> Terug naar Home
            </a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-shop"></i> Verder Winkelen
            </a>
        </div>
    </div>
</div>

<style>
    .alert {
        border-radius: 10px;
    }

    .card {
        border-radius: 15px;
        border: none;
    }

    .btn-lg {
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }
</style>
