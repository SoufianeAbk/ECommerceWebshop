@model List<ECommerceWebshop.Models.CartItem>
@{
    ViewData["Title"] = "Winkelwagen";
    decimal total = (decimal)(ViewData["CartTotal"] ?? 0m);
}

<h1>Winkelwagen</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <h4>Uw winkelwagen is leeg</h4>
        <p>Begin met winkelen en voeg producten toe aan uw winkelwagen.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-shop"></i> Ga Winkelen
        </a>
    </div>
}
else
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-cart3"></i> Winkelwagen Items (@Model.Count)</h5>
            <form asp-action="ClearCart" method="post" id="clearCartForm" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="button" class="btn btn-sm btn-danger" onclick="confirmClearCart()">
                    <i class="bi bi-trash"></i> Leeg Winkelwagen
                </button>
            </form>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 100px;">Product</th>
                            <th>Naam</th>
                            <th style="width: 120px;">Prijs</th>
                            <th style="width: 150px;">Aantal</th>
                            <th style="width: 120px;">Subtotaal</th>
                            <th style="width: 100px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImageUrl" alt="@item.ProductName"
                                         class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;">
                                </td>
                                <td class="align-middle">
                                    <strong>@item.ProductName</strong>
                                </td>
                                <td class="align-middle">
                                    <span class="text-primary fw-bold">€ @item.Price.ToString("F2")</span>
                                </td>
                                <td class="align-middle">
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.ProductId" />
                                        <div class="input-group input-group-sm" style="width: 130px;">
                                            <input type="number" name="quantity" value="@item.Quantity"
                                                   min="1" class="form-control" />
                                            <button type="submit" class="btn btn-outline-secondary" title="Update">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td class="align-middle">
                                    <strong class="text-success">€ @item.Total.ToString("F2")</strong>
                                </td>
                                <td class="align-middle text-center">
                                    <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Weet u zeker dat u dit product wilt verwijderen?')"
                                                title="Verwijderen">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th colspan="4" class="text-end">Totaal:</th>
                            <th colspan="2">
                                <span class="h5 text-primary mb-0">€ @total.ToString("F2")</span>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 mb-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                <i class="bi bi-arrow-left"></i> Verder Winkelen
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a asp-action="Checkout" class="btn btn-success btn-lg w-100">
                <i class="bi bi-credit-card"></i> Afrekenen
            </a>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmClearCart() {
            if (confirm('Weet u zeker dat u alle items uit de winkelwagen wilt verwijderen?')) {
                document.getElementById('clearCartForm').submit();
            }
        }
    </script>
}

<style>
    .card {
        border-radius: 15px;
        border: none;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn-lg {
        border-radius: 10px;
        padding: 15px;
    }

    .alert {
        border-radius: 10px;
    }
</style>