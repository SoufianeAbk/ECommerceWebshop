<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceWebshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceWebshop.styles.css" asp-append-version="true" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark fixed-top shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop-window"></i> ECommerce Webshop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link hover-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-link" asp-area="" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-grid"></i> Producten
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3"></i> Winkelwagen
                                <span class="badge bg-warning text-dark rounded-pill" id="cartCount">0</span>
                            </a>
                        </li>
                    </ul>

                    <!-- Search Form -->
                    <form class="d-flex me-3">
                        <input class="form-control me-2" type="search" placeholder="Zoeken..." aria-label="Search">
                        <button class="btn btn-outline-light" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <!-- Login/Logout Section -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle hover-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person"></i> Mijn Profiel
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                                <i class="bi bi-speedometer2"></i> Admin Dashboard
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-2">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="bi bi-box-arrow-right"></i> Uitloggen
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link hover-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Inloggen
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link hover-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Registreren
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-section">
        <div class="container">
            <div class="footer-content pt-5 pb-5">
                <div class="row">
                    <!-- About Section -->
                    <div class="col-xl-4 col-lg-4 mb-50">
                        <div class="footer-widget">
                            <div class="footer-logo">
                                <a href="#"><i class="bi bi-shop-window"></i> ShopBE</a>
                            </div>
                            <div class="footer-text">
                                <p>Uw vertrouwde online winkel voor elektronica, kleding, boeken en meer. Wij bieden kwaliteitsproducten tegen de beste prijzen met snelle levering door heel Europa.</p>
                            </div>
                            <div class="footer-social-icon">
                                <span>Volg ons</span>
                                <a href="#"><i class="bi bi-facebook"></i></a>
                                <a href="#"><i class="bi bi-twitter"></i></a>
                                <a href="#"><i class="bi bi-instagram"></i></a>
                                <a href="#"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Quick Links Section -->
                    <div class="col-xl-4 col-lg-4 col-md-6 mb-30">
                        <div class="footer-widget">
                            <div class="footer-widget-heading">
                                <h3>Quick Links</h3>
                            </div>
                            <ul>
                                <li><a asp-controller="Home" asp-action="About">Over ons</a></li>
                                <li><a asp-controller="Home" asp-action="FAQ">Veelgestelde Vragen</a></li>
                                <li><a asp-controller="Home" asp-action="Shipping">Verzending & Levering</a></li>
                                <li><a asp-controller="Home" asp-action="Terms">Algemene Voorwaarden</a></li>
                                <li><a asp-controller="Home" asp-action="Privacy">Privacy Beleid</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- Contact Section -->
                    <div class="col-xl-4 col-lg-4 col-md-6 mb-50">
                        <div class="footer-widget">
                            <div class="footer-widget-heading">
                                <h3>Contact</h3>
                            </div>
                            <div class="footer-contact">
                                <p><i class="bi bi-geo-alt"></i> Nieuwstraat 123, 1000 Brussel, België</p>
                                <p><i class="bi bi-telephone"></i> +32 (0)48 123 4567</p>
                                <p><i class="bi bi-envelope"></i> info@shopbe.com</p>
                                <p><i class="bi bi-clock"></i> Ma-Vr: 9:00 - 18:00, Za: 10:00 - 16:00</p>
                            </div>
                            <div class="subscribe-form">
                                <div class="footer-widget-heading">
                                    <h3>Nieuwsbrief</h3>
                                </div>
                                <div class="footer-text mb-25">
                                    <p>Mis geen aanbiedingen, schrijf je in voor onze nieuwsbrief!</p>
                                </div>
                                <form action="#">
                                    <div class="input-group mb-3">
                                        <input type="email" class="form-control" placeholder="E-mailadres">
                                        <button class="btn btn-warning" type="button"><i class="bi bi-send"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright-area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 text-center text-lg-left">
                        <div class="copyright-text">
                            <p>&copy; 2025 ECommerce Webshop - Alle rechten voorbehouden</p>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 d-none d-lg-block text-right">
                        <div class="footer-menu">
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a asp-controller="Home" asp-action="Terms">Terms</a></li>
                                <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                <li><a asp-controller="Home" asp-action="Shipping">Policy</a></li>
                                <li><a asp-controller="Home" asp-action="About">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Update cart count on page load
        $(document).ready(function() {
            updateCartCount();
        });

        function updateCartCount() {
            $.get('/Cart/GetCartCount', function(data) {
                $('#cartCount').text(data);
            });
        }
    </script>
</body>
</html>